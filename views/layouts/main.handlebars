<!DOCTYPE html>
  <head>
    <meta charset="utf-8">

    <title>{{appTitle}}</title>
    <meta name="description" content="GeoTagging">
    <meta name="author" content="Eric Gelinas">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
    <link rel="stylesheet" href="/style/main.css" type="text/css" media="screen">
  </head>

  <body class="geotagger" ontouchstart="" id="top">

    <header class="area">
      <h1><a href="/">StandardPixel Geotagger</a></h1>
    </header>
    {{#if user}}
      {{{body}}}
    {{else}}
      {{>loggedout}}
    {{/if}}
    <footer class="area">
      <ul>
        <li>Â© 2015 Eric Gelinas</li>
        <li><a href="http://standardpixel.com">StandardPixel.com</a></li>
        <li><a href="/credit">Credit</a></li>
      </ul>
    </footer>
    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    <script src="/js/dist/vendor/require.js"></script>
    <script>

      "use strict";

      require.config({
        baseUrl     : "/js/dist",
        paths       : {
          "modernizr"  : '//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min',
          "handlebars" : '//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min'
        },
        waitSeconds : 15
      });

      {{#if view}}{{#if user}}
      require( ["view_{{view}}"] );
      {{/if}}{{/if}}
    </script>

  </body>
</html>
